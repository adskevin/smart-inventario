<body class="layout-default">
  <section class="hero is-fullheight is-medium background-login is-bold">
    <div class="hero-body">
      <div class="container">
        <div class="columns is-centered">
          <article class="card is-rounded">
            <div class="card-content">
              <div class="logotipo"></div>
              @if(!flashMessage('emailSent'))
              <form action="/resemail" method="POST">
                {{ csrfField() }}
                <div class="field">
                  <label class="label">Digite seu email:</label>
                  <p class="control has-icons-left">
                    <input class="input" type="email" name="email" value={{ old('email', '') }}>
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                  </p>
                  @if(getErrorFor('email'))
                    <p class="help is-danger">Erro ao validar seu email</p>
                  @endif
                </div>
                <p class="control">
                  <button class="button is-primary is-medium is-fullwidth">
                    <span class="icon">
                      <i class="fas fa-envelope"></i>
                    </span>
                    <span> Enviar email de recuperação </span>
                  </button>
                </p>
              </form>
              @elseif(flashMessage('error'))
                <div class="field">
                  <p class="control has-icons-left">
                    <div class="notification is-danger is-light">
                      Ocorreu um erro ao validar suas informações. <br>
                      Por favor, tente novamente.
                    </div>
                  </p>
                </div>
              @else
                <div class="field">
                  <p class="control has-icons-left">
                    <div class="notification is-success is-light">
                      Um email foi enviado para você. <br>
                      Siga as instruções para recuperar sua senha.
                    </div>
                  </p>
                </div>
              @endif
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>
</body>

</html>
